<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <link rel="icon" type="image/png" href="/IGLLOGO.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.css"
      rel="stylesheet"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.js"
    ></script>
  </head>
  <body>
    <div
      id="info"
      class="bg-black fixed overflow-y-scroll top-0 w-full h-full bg-opacity-50 py-4 px-4 display-none"
    >
      <div class="bg-white shadow-lg rounded-lg">
        <div class="flex grid-cols-3">
          <div class="text-3xl w-full px-2 py-2 col-span-6 justify-start">
            <span>Users:</span>
          </div>
          <div class="flex py-3">

            <div class="px-2 col-span-1">
              <a href="/HODdashboard"><button
                  onclick="giveinfo('close')"
                  class="col-span-6 font-mono border-2 px-4 rounded-2xl text-center border-gray-300 hover:border-black hover:text-gray-600"
                >
                  x
                </button></a>
            </div>
          </div>
        </div>
        <hr />
        <div class="px-2 py-3 overflow-x-scroll">
          <div>
            <table
              class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
            >
              <thead
                class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400"
              >
                <tr>
                  <th scope="col" class="px-6 py-3">Name</th>
                  <th scope="col" class="px-6 py-3">User Type</th>
                  <th scope="col" class="px-6 py-3">SAP ID</th>
                  <th scope="col" class="px-6 py-3">Email</th>
                </tr>
              </thead>
              <tbody>
                {{#each user}}
                  <tr
                    class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
                  >
                    <td
                      scope="row"
                      class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                    >{{name}}</td>
                    <td class="px-6 py-4">{{tag}}</td>
                    <td class="px-6 py-4">{{SAPID}}</td>
                    <td class="px-6 py-4">{{Email}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>