            >
              <thead
                class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400"
              >
                <tr>
                  <th scope="col" class="p-4"></th>
                  <th scope="col" class="px-6 py-3">Requestor</th>
                  <th scope="col" class="px-6 py-3">Department Name</th>
                  <th scope="col" class="px-6 py-3">Authorization Request</th>
                  <th scope="col" class="px-6 py-3">Date recieved</th>
                  <th scope="col" class="px-6 py-3">Authorized by</th>
                  <th scope="col" class="px-6 py-3">Authorization Status</th>
                </tr>
              </thead>
              <tbody>
                {{#each Form}}
                  <tr
                    class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
                  >
                    <td class="w-4 p-4">
                      <div class="flex items-center">
                        <input
                          form="accept"
                          id={{_id}}
                          type="checkbox"
                          name="formcheckbox"
                          value={{_id}}
                          class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                        />
                        <input
                          form="reject"
                          id="{{_id}},reject"
                          type="checkbox"
                          name="formcheckbox"
                          value={{_id}}
                          class="w-4 h-4 text-blue-600 hidden bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                        />
                        <label
                          for="checkbox-table-search-1"
                          class="sr-only"
                        >checkbox</label>
                      </div>
                    </td>
                    <form method="post" action="/authorize">
                      <th
                        scope="row"
                        class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                      >

