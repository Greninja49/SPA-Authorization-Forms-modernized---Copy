                          class="hover:text-blue-400 underline"
                          type="submit"
                          name="objectid"
                          value={{_id}}
                        >
                          {{Requestor}}
                        </button>

                      </th>
                    </form>
                    <td class="px-6 py-4">{{DeptName}}</td>
                    <td class="px-6 py-4">{{Authreq}}</td>
                    <td class="px-6 py-4">{{Date}}</td>
                    <td class="px-6 py-4">{{authgiven}}</td>
                    <td class="px-6 py-4">{{authstatus}}</td>
                  </tr>
                {{/each}}
